<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5FFFA"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caesar"
        android:id="@+id/caesar"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KeyWord"
        android:id="@+id/keyword"
        android:layout_marginEnd="50dp"
        android:layout_alignTop="@+id/caesar"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vigenere"
        android:id="@+id/vigenere"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/caesar"
        android:layout_alignStart="@+id/caesar"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoKey"
        android:id="@+id/autokey"
        android:layout_alignBottom="@+id/vigenere"
        android:layout_alignStart="@+id/keyword"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playfair"
        android:id="@+id/playfair"
        android:layout_below="@+id/vigenere"
        android:layout_alignStart="@+id/vigenere"
        android:layout_marginTop="39dp"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="置换"
        android:id="@+id/permutation"
        android:layout_alignBottom="@+id/playfair"
        android:layout_alignStart="@+id/autokey"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列置换"
        android:id="@+id/columnpermutation"
        android:layout_below="@+id/playfair"
        android:layout_alignStart="@+id/playfair"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA"
        android:id="@+id/ca"
        android:layout_alignBottom="@+id/columnpermutation"
        android:layout_alignStart="@+id/permutation"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DES"
        android:id="@+id/des"
        android:layout_below="@+id/columnpermutation"
        android:layout_alignStart="@+id/columnpermutation"
        android:layout_marginTop="39dp"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双机"
        android:id="@+id/two"
        android:background="@drawable/shape"
        android:layout_alignTop="@+id/des"
        android:layout_alignStart="@+id/ca" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:id="@+id/back"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
